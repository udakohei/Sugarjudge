<div class="container">
  <h1 class="mt-3"><%= title "#{@user.name}さんの記録" %></h1>
  <div class ="row justify-content-center user-meal">
    <div class="col-sm-7">
      <h1 class="mt-3 display-3 text-center <%= @user.result_color %>"><%= @user.result %></h1>
      <h1 class="text-center display-3 <%= @user.result_color %>"><%= @user.sum_balance_of_payments_with_sign %></h1>
      <canvas id="myChart" data-data="<%= @data_values %>" ></canvas>
    </div>
  </div>
  <div class="row mt-3">
    <%= render @meals %>
  </div>
  <%= paginate @meals, theme: 'bootstrap-5', pagination_class: "pagination-sm flex-wrap justify-content-center",
                   nav_class: "d-inline-block" %>
</div>