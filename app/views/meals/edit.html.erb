<div class="container">
  <h1 class="mt-3">食品選択</h1>
  <%= image_tag @meal.meal_image.url, class: 'img-fluid d-block mx-auto', size: '500x500' %>
  <%= form_with model: @meal, local: true do |f| %>
    <%= f.collection_check_boxes :food_ids, @foods, :id, :name, class: 'form-control' %>
    <%= f.submit nil %>
  <% end %>
</div>